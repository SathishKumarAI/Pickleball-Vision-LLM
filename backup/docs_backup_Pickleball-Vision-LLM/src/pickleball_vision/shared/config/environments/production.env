# Application
APP_NAME=pickleball-vision
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000

# Redis
REDIS_HOST=redis.production
REDIS_PORT=6379
REDIS_DB=0

# Vector Database
VECTOR_DB_HOST=vector-db.production
VECTOR_DB_PORT=19530

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_MULTIPROC_DIR=/tmp
METRICS_PORT=8000

# Security
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key

# Feature Flags
ENABLE_GPU=true
ENABLE_CACHING=true
ENABLE_BATCH_PROCESSING=true

# Performance
WORKERS=4
THREADS_PER_WORKER=2
MAX_REQUESTS_JITTER=10 